@model IEnumerable<UserDTO>
@{
    ViewData["Title"] = "Kullanıcı Listesi";
}
<div class="container border border-dark rounded-5 shadow">
    <h2 class="my-4 text-center text-uppercase">Kullanıcı Listesi</h2>

    <table class="table table-striped table-bordered shadow">
        <thead>
            <tr class="text-uppercase text-center">
                <th>Kullanıcı Adı</th>
                <th>Email</th>
                <th>Kayıt Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr class="text-center">
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.MembershipDate.ToShortDateString()</td>
                    <td>
                        <a href="/User/UpdateUser?userId=@user.UserId" class="btn btn-primary rounded-5">Güncelle</a>
                        <a href="/User/DeleteUser?userId=@user.UserId" class="btn btn-danger rounded-5">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
